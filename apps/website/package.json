{
	"name": "lapikit.dev-v1",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"initialize": "npm run prepare:files && npm run prepare:docs && npm run prepare:search && npm run prepare:counter && npm run prepare:summaries",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepare:files": "node --import tsx scripts/sync-docs/index.ts",
		"prepare:docs": "node --import tsx scripts/get-navigation-docs.ts",
		"prepare:search": "node --import tsx scripts/get-search-pages.ts",
		"prepare:counter": "node --import tsx scripts/get-counter.ts",
		"prepare:summaries": "node --import tsx scripts/generate-summaries.ts",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.1",
		"@polka/compression": "^1.0.0-next.25",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/enhanced-img": "^0.8.4",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.8",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"express": "^5.1.0",
		"globals": "^16.5.0",
		"jsdom": "^26.1.0",
		"lapikit": "*",
		"mdsvex": "^0.12.6",
		"mingcute_icon": "^2.9.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"remark-extract-toc": "^1.1.0",
		"site-kit": "*",
		"svelte": "^5.43.4",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3",
		"vite": "^7.2.2",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@fontsource/roboto": "^5.2.8",
		"rehype-slug": "^6.0.0",
		"remark-toc": "^9.0.0",
		"shiki": "^3.15.0",
		"unist-util-visit": "^5.0.0"
	}
}
