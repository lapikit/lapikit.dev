{
	"name": "website",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:content": "npm run build:content && npm run build:search && npm run build:navigation && vite dev",
		"build": "npm run build:content && npm run build:search && npm run build:navigation && vite build",
		"build:content": "node src/lib/scripts/build-docs.mjs",
		"build:search": "node src/lib/scripts/build-search-data.mjs",
		"build:navigation": "node src/lib/scripts/build-navigation-data.mjs",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepare:docs": "node --import tsx scripts/sync-docs/index.ts",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@polka/compression": "^1.0.0-next.25",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/enhanced-img": "0.6.1",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.7",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"express": "^5.1.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"lapikit": "*",
		"mdsvex": "^0.12.3",
		"mingcute_icon": "^2.9.6",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"remark-extract-toc": "^1.1.0",
		"site-kit": "*",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.7",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.5",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@fontsource/press-start-2p": "^5.2.5",
		"@fontsource/roboto": "^5.2.5",
		"rehype-slug": "^6.0.0",
		"remark-toc": "^9.0.0",
		"shiki": "^3.2.2",
		"unist-util-visit": "^5.0.0"
	}
}
